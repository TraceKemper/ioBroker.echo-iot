{
   "i18n":true,
   "type": "tabs",
   "items": {
        "_options": {
            "type": "panel",
            "label": "options",
            "items": {
                "devices": {
                    "type": "table",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "label": "devices",
                    "items": [
                        {
                            "type": "text",
                            "attr": "deviceName",
                            "title": "device name",
                            "width": "30%",
                            "filter": true,
                            "sort": true
                        },
                        {
                            "type": "text",
                            "attr": "echoName",
                            "title": "echo name",
                            "width": "30%",
                            "filter": false,
                            "sort": false
                        },
                        {
                            "type": "select",  
                            "attr":"echoType",
                            "title": "echo device type",
                            "width": "20%",
                            "options": [
                                {"label": "switch", "value": 1},
                                {"label": "light", "value": 2},
                                {"label": "dimmable light", "value": 3},
                                {"label": "RGB light", "value": 4},
                                {"label": "switch", "value": 5},
                                {"label": "shutter", "value": 6},
                                {"label": "other", "value": 7}
                            ] 
                        }
                    ]
                }
            }
        }
   } 
}